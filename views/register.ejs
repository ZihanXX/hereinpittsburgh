<% include partials/header %>

<h1>Sign Up</h1>

<form action="/register" method="post">
    <input type="text" name="personal_name" placeholder="your name" required>
    <input type="email" name="username" placeholder="email" required>
    <input type="password" name="password" pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)[a-zA-Z\d]{8,}$" placeholder="password" required>
    <p>Minimum eight characters, at least one uppercase letter, one lowercase letter and one number</p>
    <button>Sign up</button>
</form>

