<% include ../partials/header %>

<p><img src="<%= item.image %>"></p>

<p><%= item.name %></p>
<p><%= item.category.catename %></p>
<p><%= item.author.username %></p>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add New Comment To <%= item.name %></h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/items/<%= item.id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="comment">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block">Submit!</button>
                </div>
                <a href="//items/<%= item.id %>/comments">Go Back</a>
            </form>
        </div>
        
    </div>
</div>





<% include ../partials/footer %>