<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit Item <%= item.name %></h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/items/<%= item._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="item[name]" value="<%= item.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="item[wechat]" value="<%= item.wechat %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block">Submit!</button>
                </div>
                <a href="/items">Go Back</a>
            </form>
        </div>
        
    </div>
</div>





<% include ../partials/footer %>