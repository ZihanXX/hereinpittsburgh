<% include ../partials/header %>

<div style="padding-top: 10px"></div>


<div class="ui container">

  <!--add new item-->
  <div style="width: 200px; margin: 30px auto">
    <div class="ui floating labeled teal icon dropdown button" style="width: 200px">
      <i class="dropdown icon"></i>
      <span class="text">Add New Post</span>
      <div class="menu">
        <a class="item" href="/items/new_sale">On Sale - <span style="color: grey">二手家具/电器等</span></a>
        <a class="item" href="/items/new_housing">Housing - <span style="color: grey">转租/求租房屋</span></a>
        <a class="item" href="/items/new_events">Events - <span style="color: grey">发布活动/广告</span></a>
      </div>
    </div>
  </div>
  
  <!--items-->
  <div style="margin-top: 30px">
    <% if(category != "") { %>
      <h3 class="ui horizontal divider header">
        <%= category %>
      </h3>
      <% if(category == "On Sale") { %>
        <p style="text-align: center; color: grey">二手家具/电器/书籍. PLEASE FIND ITEMS ON SALE HERE.</p>
      <% } else if(category == "Housing") { %>
        <p style="text-align: center; color: grey">转租/求租房屋. PLEASE FIND HOUSING INFORMATION HERE.</p>
      <% } else { %>
        <p style="text-align: center; color: grey">活动/广告发布. PLEASE FIND EVENTS/ADS HERE.</p>
      <% } %>
      <% include ../items/items %>
    <% } else { %>
      <h3 class="ui horizontal divider header">
        All Posts
      </h3>
      <p style="text-align: center; color: grey">二手家具电器/房屋转租/活动发布. PLEASE FIND ALL POSTS HERE.</p>
      <% include ../items/items %>
    <% } %>
  </div>

</div>

<script>
  $(document).ready(function() {
    $('.ui.dropdown').dropdown();
  });
</script>



<% include ../partials/footer %>