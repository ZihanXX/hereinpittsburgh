<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>This is the Items Page</h1>
        <p>View our hand-picked items</p>
        <p>
            <a class="btn btn-primary btn-lg" href="/items/new">Add New Item</a>
        </p>
        </div>
    </header>
    
    <div class="row">
        <div class="col-lg-12">
            <h3>Our Most Popular Items</h3>
        </div>
    </div>
    
    <div class="row" style="display:flex; flex-wrap:wrap;">
        <% items.forEach(function(items){ %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
                <img src="<%= items.image %>">
                <div class="caption">
                    <h4><%= items.name %></h4>
                </div>
                <p>
                    <a href="/items/<%= items._id %>" class="btn btn-frimary">More Info</a>
                </p>
            </div>
        </div>
    <% }); %>
    </div>
    
</div>


<% include ../partials/footer %>